<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutB"
    tools:context="com.jtmk.smartpoly.StaffFragment"
    android:background="@color/background"
    android:theme="@style/MyTheme">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:text="STAFF OF"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/text2"
                android:layout_below="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:text="JTMK POLIMAS"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/orange"
                android:textAlignment="center"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_below="@id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_title"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="The Department of Information &amp; Communication Technology (JTMK) is one of the main Academic Departments at Sultan Abdul Halim Mu'adzam Shah Polytechnic (POLIMAS), Jitra. The purpose, objectives and learning outcomes of the Information Technology Diploma program were formulated based on the vision and mission of the Department of Polytechnic Studies and Community Colleges (JPPKK). This program provides students with various skills to enable them to adapt to a challenging work environment when they graduate. JTMK is equipped with the best and complete training and education facilities to support the achievement of practical and theoretical learning outcomes for all courses, in line with the requirements of outcome-based education (OBE)."
                        android:textColor="@color/black"
                        android:justificationMode="inter_word"
                        android:layout_marginTop="2dp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_below="@id/text2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"
                android:layout_marginTop="25dp"
                android:src="@drawable/staffjtmk" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_below="@id/card1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"
                android:layout_marginTop="25dp"
                android:src="@drawable/visi" />

            <TextView
                android:id="@+id/text3"
                android:layout_below="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="26sp"
                android:text="ORGANIZATION CHART"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text"
                android:layout_marginTop="20dp"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_below="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"
                android:src="@drawable/orgchart"
                android:layout_marginBottom="80dp"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>