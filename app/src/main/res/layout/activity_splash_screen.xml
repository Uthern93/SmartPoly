<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jtmk.smartpoly.SplashScreen"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="140dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:src="@drawable/smartlogo" />

    <ProgressBar
        android:layout_width="300dp"
        android:layout_height="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="100"
        android:progress="2"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:progressDrawable="@drawable/progress_bar"
        android:id="@+id/progress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/progress"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_light"
        android:id="@+id/percent"/>

    <TextView
        android:id="@+id/bottomtxt"
        android:layout_above="@id/bottomtxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:textSize="@dimen/_10sdp"
        android:text="POLITEKNIK SULTAN ABDUL HALIM MU'ADZAM SHAH"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/bottomtxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jabatan Teknologi Maklumat &amp; Komunikasi"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_8sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_light"
        android:layout_alignParentBottom="true"
        android:textAllCaps="true"
        android:layout_marginBottom="@dimen/_16sdp"/>

</RelativeLayout>