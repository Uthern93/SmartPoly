<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context="com.jtmk.smartpoly.AddDiscussionActivity">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:layout_below="@+id/header">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_140sdp"
            android:src="@drawable/applogoputih"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/ptitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/rounded_edittext"
            android:hint="Ask question about problem you're having.."
            android:fontFamily="@font/poppins_light"
            android:textSize="@dimen/_10sdp"
            android:inputType="text"
            android:padding="8dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/imagep"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/add_photo_white"
            android:background="@drawable/border_white"/>

        <EditText
            android:id="@+id/pdes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="start"
            android:hint="What are the details of your problem?"
            android:fontFamily="@font/poppins_light"
            android:textSize="@dimen/_10sdp"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="120dp"
            android:padding="8dp"
            android:lines="8"
            android:singleLine="false"/>

        <Button
            android:id="@+id/pupload"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/orange"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/rounded_button2"
            android:text="Upload" />

        <Button
            android:id="@+id/pcancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/button_invi"
            android:layout_marginTop="@dimen/_10sdp"
            app:cornerRadius="20dp"
            android:text="Cancel"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textAllCaps="false"/>

    </LinearLayout>

</ScrollView>